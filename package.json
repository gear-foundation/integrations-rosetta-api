{
  "name": "rosetta",
  "scripts": {
    "build:client": "yarn workspace rosetta-client run build",
    "build:server": "yarn workspace rosetta-api run build",
    "build:util": "yarn workspace gear-util run build",
    "build": "yarn build:util && yarn build:client && yarn build:server",
    "start:offline": "yarn workspace rosetta-api run start:offline",
    "start:vara-development": "yarn workspace rosetta-api run start:vara-development",
    "start:vara-mainnet": "yarn workspace rosetta-api run start:vara-mainnet",
    "start:vara-testnet": "yarn workspace rosetta-api run start:vara-testnet",
    "watch:offline": "yarn workspace rosetta-api run watch:offline",
    "watch:vara-development": "yarn workspace rosetta-api run watch:vara-development",
    "watch:vara-mainnet": "yarn workspace rosetta-api run watch:vara-mainnet",
    "watch:vara-testnet": "yarn workspace rosetta-api run watch:vara-testnet"
  },
  "packageManager": "yarn@3.3.1",
  "workspaces": [
    "server",
    "client",
    "util"
  ]
}
